@{
    ViewBag.Title = "Contact";
}
<div class="jumbotron">
    <style>

        .jumbotron {
           
            background-position: center;
            background-size: cover;
            width: 100%;
            height: 100%;
            background-image: url("https://marriottschool.byu.edu/upload/news/images/1077-byu_marriott_school_1.jpg");
            height: 350px;
            color: white;
        }
    </style>
    <h1>Contact</h1>
</div>
    <center><h1><b>Contact</b></h1></center>
    <br />
    <br />

    <div class="row">
        <div class="col-md-6">
            <h4>
                We are located at the BYU Tanner building.
                <br />Come stop by at any time between 7 AM - 12 AM.
            </h4>
            <p> N. Eldon Tanner Building, Campus Dr, Provo, UT 84604</p>
            <p>801-114-1234</p>
            <p>Tanner@byu.edu</p>


            <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12180.557310048554!2d-111.6525023!3d40.2504348!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x4858f3307ac3d0b2!2sN.+Eldon+Tanner+Building!5e0!3m2!1sen!2sus!4v1477707335265" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="col-md-6">
            <h4>
                Fill out the form below for any question regarding BSIS or MSIM Select the "Other" subject to send us a general question.
            </h4>

            <br />
            <!--Contact Form-->
            @using (Html.BeginForm())
            {
                <h4>First Name</h4>
                @Html.TextBox("FirstName");
                <h4>Last Name</h4>
                @Html.TextBox("LastName");
                <h4>Email</h4>
                @Html.TextBox("Email");
                <h4>Subject</h4>
                @Html.DropDownList("Subject")
                <h4>Message Body</h4>
                @Html.TextArea("MessageBody")
                <br /><br />
                <input type="submit" value="Submit">
            }
        </div>
    </div>
